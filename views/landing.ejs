<%- include ("partials/header") %>

<body>
    <div class="container">		
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
 
    <div class="landing">
		<img src="https://pbs.twimg.com/profile_images/1115643995089186817/fGWwZrps_400x400.jpg" class="logo">
        <h1 class ="welcome">Welcome to MasterCard!</h1>
        <a href="/merchants" class="btn btn-lg btn-success view">View All Merchants</a>
    </div>
	
	<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Enter the Location</h1>
		<div style="width: 30%; margin:25px auto; "> 
			<form action="/merchants/nearest" method="GET" >
				<div class="form-group">
					<input class="form-control" type="text" name="latitude" placeholder="Enter the Latitude">
				</div>	
				
				<div class="form-group">
					<input class="form-control" type="text" name="longitude" placeholder="Enter the Longitude">	
				</div>
	
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block">Submit!</button>	 
				</div>
			</form>	
		</div>
	</div>	
</div>

<%- include ("partials/footer") %>
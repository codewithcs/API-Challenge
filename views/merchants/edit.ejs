<%- include ("../partials/header") %>

<div class="container">
	<div class="row"> 
		<h1 style="text-align:center;"> Edit <%= merchant.merchantName %> </h1>
		<div style="width: 30%; margin:25px auto; "> 
			<form action="/merchants/<%= merchant._id %>?_method=PUT" method="POST" >
				<div class="form-group">
					<input class="form-control" type="text" name="merchant[merchantName]" value="<%= merchant.merchantName %>" >
				</div>	
				
				<div class="form-group">
					<input class="form-control" type="number" name="merchant[latitude]" value="<%= merchant.latitude%>" 							   min="0.01" step="0.01" >
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="merchant[longitude]" value="<%= merchant.longitude %>" >	
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="merchant[merchantId]" value="<%= merchant.merchantId %>" >	
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block">Submit!</button>	 
				</div>
			</form>	
			<a href="/merchants" >Go Back</a> 
		</div>
	</div>	
</div>

<%- include ("../partials/footer") %>